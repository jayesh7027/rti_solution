{
  "info": {
    "name": "Yii2 Task Manager API",
    "description": "Collection for testing Yii2 Task API endpoints with Bearer token authentication.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Tasks",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer demo-token-123", "type": "text" }
        ],
        "url": { "raw": "http://localhost/tasks", "protocol": "http", "host": ["localhost"], "path": ["tasks"] }
      }
    },
    {
      "name": "View Task",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer demo-token-123", "type": "text" }
        ],
        "url": { "raw": "http://localhost/tasks/1", "protocol": "http", "host": ["localhost"], "path": ["tasks", "1"] }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer demo-token-123", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sample Task\",\n  \"description\": \"Task details here.\",\n  \"priority\": \"medium\",\n  \"due_date\": \"2025-08-31\"\n}"
        },
        "url": { "raw": "http://localhost/tasks", "protocol": "http", "host": ["localhost"], "path": ["tasks"] }
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer demo-token-123", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Task Title\",\n  \"description\": \"Updated description.\",\n  \"priority\": \"high\",\n  \"status\": \"in_progress\"\n}"
        },
        "url": { "raw": "http://localhost/tasks/1", "protocol": "http", "host": ["localhost"], "path": ["tasks", "1"] }
      }
    },
    {
      "name": "Delete Task",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer demo-token-123", "type": "text" }
        ],
        "url": { "raw": "http://localhost/tasks/1", "protocol": "http", "host": ["localhost"], "path": ["tasks", "1"] }
      }
    }
  ]
}
